<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="60dp"
    android:minHeight="40dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/scheduleitemcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/divider_horizontal_dark" />

        <TextView
            android:id="@+id/scheduleLocationHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="250dp"
            android:paddingStart="30dp"
            android:layout_marginTop="35dp"
            android:fontFamily="casual"
            android:layoutDirection="rtl"
            android:singleLine="false"
            android:text="location"
            android:textDirection="rtl"
            android:textSize="12sp"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/scheduleDayHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginRight="300dp"
            android:paddingLeft="10dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:text="Day"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12sp"
            android:textDirection="rtl"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/scheduleHoursHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="35dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:text="Hours" />

        <TextView
            android:id="@+id/scheduleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:text="Group"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/scheduleTypeHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="300dp"
            android:paddingLeft="10dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:text="type"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12sp"
            android:textDirection="rtl"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/scheduleTeacherHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="250dp"
            android:layout_marginTop="5dp"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:paddingStart="30dp"
            android:text="Teacher"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="12sp"
            android:textDirection="rtl" />

        <TextView
            android:id="@+id/textViewParent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="TextView" />

        <!--        <CheckBox-->
        <!--            android:id="@+id/checkBoxCourse"-->
        <!--            android:layout_width="34dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="right"-->
        <!--            android:layout_marginLeft="305sp"-->
        <!--            android:layout_marginTop="10sp"-->
        <!--            android:text=""-->
        <!--            android:visibility="gone" />-->


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>