<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewCenterCourseInfo"
        android:id="@+id/cardViewTopCourseItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/courseInformationLayoutTop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/lightorange"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseInfoNumber"
                android:layout_width="100dp"
                android:layout_marginLeft="60dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content"
                android:text="מספר הקורס" />

            <TextView
                android:id="@+id/courseInfoName"
                android:layout_marginLeft="90dp"
                android:layout_width="100dp"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="שם הקורס" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@id/cardViewTopCourseItem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/cardViewCenterCourseInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/courseInformationLayoutCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseInfoNumber1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="6dp"
                android:text="סוג הקורס"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseInfoName1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="6dp"
                android:text="נקודות זכות"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseInfoYear1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="6dp"
                android:text="ניתן בשנה"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/courseInfoSemester1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="6dp"
                android:text="ניתן בסמסטר"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/kdamcoursesscrollview"
        app:layout_constraintTop_toBottomOf="@id/cardViewCenterCourseInfo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="253dp">

        <LinearLayout
            android:id="@+id/kdamcourseslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="290dp"
            android:textStyle="italic"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_height="wrap_content"
            android:text="קורסי קדם"
            />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/schedulesscrollview"
        app:layout_constraintTop_toBottomOf="@id/kdamcoursesscrollview"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="253dp">

        <LinearLayout
            android:id="@+id/schedulelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="290dp"
                android:textStyle="italic"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_height="wrap_content"
                android:text="ימים ושעות"
                />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/aftercoursesscrollview"
        app:layout_constraintTop_toBottomOf="@id/schedulesscrollview"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="287dp"
        tools:layout_editor_absoluteY="253dp">

        <LinearLayout
            android:id="@+id/aftercourseslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="270dp"
                android:textStyle="italic"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_height="wrap_content"
                android:text="קדם לקורסים הבאים"
                />
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/bottomcardview"
        app:layout_constraintTop_toBottomOf="@id/aftercoursesscrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/addToCourseListBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="הוסף לקורסים שלי"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>