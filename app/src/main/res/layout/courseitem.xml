<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="40dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/cardview_shadow_end_color"
            android:max="100"
            android:paddingTop="@dimen/cardview_compat_inset_shadow"
            android:paddingBottom="@dimen/cardview_default_elevation"
            android:progress="0" />

        <TextView
            android:id="@+id/courseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="44dp"
            android:text="number"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="404dp"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="31dp"
            android:layout_height="40dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="48dp"
            android:fontFamily="casual"
            android:text=""
            android:visibility="visible" />

        <TextView
            android:id="@+id/TextViewCD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Roots: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pointsofcourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="None"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:enabled="false"
            android:text="Done" />

        <TextView
            android:id="@+id/coursenametextview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10dp"
            android:background="@color/cardview_light_background"
            android:fontFamily="casual"
            android:singleLine="false"
            android:text="course name"
            android:textSize="25sp"
            android:textStyle="bold"
            app:drawableBottomCompat="@color/black" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/deleteButton"
        android:layout_width="31dp"
        android:visibility="gone"
        android:layout_height="40dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="48dp"

        android:fontFamily="casual"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>