<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="50dp"
    android:minHeight="40dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/courseitemcard"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/teal_700"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:src="@android:drawable/divider_horizontal_dark"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/courseNameHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            android:paddingRight="6dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="2dp"
            android:fontFamily="casual"
            android:singleLine="false"
            android:text="name"
            android:gravity="end"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:textStyle="bold"
            app:drawableBottomCompat="@color/black" />

        <TextView
            android:id="@+id/courseNumberHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:layoutDirection="ltr"
            android:textDirection="ltr"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:text="number"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/coursegradeHolder"
            android:layout_width="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp"
            android:text="grade"
             />

        <TextView
            android:id="@+id/coursepoints"
            android:layout_width="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:textSize="12sp"
            android:layout_gravity="left"
            android:text="נקודות זכות"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/courseTypeHolder"
            android:layout_width="wrap_content"
            android:background="@color/common_google_signin_btn_text_dark_default"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="25dp"
            android:textSize="10sp"
            android:text="type"
            android:layout_gravity="left"
            android:gravity="left"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/textViewParent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="TextView" />

        <EditText
            android:id="@+id/textViewAddGrade"
            android:layout_width="34dp"
            android:layout_marginRight="34dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxLength="3"
            android:inputType="number"
            android:textSize="14sp"
            android:text="" />

        <CheckBox
            android:id="@+id/checkBoxCourse"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="305sp"
            android:text=""
            android:layout_gravity="right"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textviewgrade"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/gradeDescription"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_gravity="right"
            android:visibility="gone" />

        <TextView
            android:id="@+id/deleteButton"
            android:layout_width="31dp"
            android:visibility="gone"
            android:layout_height="40dp"
            android:paddingLeft="1dp"
            android:layout_marginLeft="0dp"
            android:drawableRight="@drawable/ic_baseline_delete_24"
            android:fontFamily="casual"
            android:text=""
            android:layout_gravity="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>