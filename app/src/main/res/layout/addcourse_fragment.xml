<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundimage">

    <TextView
        android:id="@+id/myCoursesTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardViewTopAddCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="הוספת קורס" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTopAddCourse"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        app:cardBackgroundColor="@color/lightorange"
        app:layout_constraintTop_toBottomOf="@id/myCoursesTextView"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewNumber"
            android:divider="#ad5"
            android:dividerHeight="2dp"
            android:layout_below="@+id/match"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/match"/>

        <SearchView
            android:id="@+id/searchViewNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:queryHint="חפש לפי מספר קורס"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewName"
            android:divider="#ad5"
            android:dividerHeight="2dp"
            android:layout_below="@+id/searchViewName"/>
        <SearchView
            android:id="@+id/searchViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:queryHint="חפש לפי שם קורס"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewType"
            android:divider="#ad5"
            android:dividerHeight="2dp"
            android:layout_below="@+id/searchViewType"/>
        <SearchView
            android:id="@+id/searchViewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:queryHint="חפש לפי סוג קורס"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewYear"
            android:divider="#ad5"
            android:dividerHeight="2dp"
            android:layout_below="@+id/searchViewYear"/>
        <SearchView
            android:id="@+id/searchViewYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:queryHint="חפש לפי שנה"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"/>

        <EditText
            android:id="@+id/insertCourseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="הכנס מספר קורס להוספה.."
            android:layout_marginLeft="80dp"
            />

        <Button
            android:id="@+id/addCourseToListBtn"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="הוספה" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>