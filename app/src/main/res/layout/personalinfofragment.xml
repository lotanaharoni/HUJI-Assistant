<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/mtrl_card_checked_layer_id"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:cardBackgroundColor="@android:color/background_light"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="686dp" >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layouttext"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewFaculty"
                android:background="@drawable/backgroundimage"
                android:textStyle="bold"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="14dp"
                android:inputType="none"
                android:layout_height="match_parent"
                android:hint="בחר פקולטה/ביה''ס"
                android:layout_weight="1"
                android:text="" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layouttext1"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewChug"
                android:background="@drawable/backgroundimage"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="98dp"
                android:inputType="none"
                android:layout_height="match_parent"
                android:hint="בחר חוג"
                android:layout_weight="1"
                android:text="" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layouttext2"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewMaslul"
                android:background="@drawable/backgroundimage"
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:layout_marginTop="185dp"
                android:inputType="none"
                android:layout_height="match_parent"
                android:hint="בחר מסלול"
                android:layout_weight="1"
                android:text="" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layouttext3"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewDegree"
                android:background="@drawable/backgroundimage"
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:textStyle="bold"
                android:layout_marginRight="12dp"
                android:layout_marginTop="272dp"
                android:inputType="none"
                android:layout_height="match_parent"
                android:hint="בחר תואר"
                android:layout_weight="1"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layouttext4"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextViewYear"
                android:background="@drawable/backgroundimage"
                android:layout_width="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textStyle="bold"
                android:layout_marginTop="360dp"
                android:inputType="none"
                android:layout_height="match_parent"
                android:hint="שנה לתואר"
                android:layout_weight="1"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/continuePersBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="המשך"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtrl_card_checked_layer_id"

        />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="מסך הרשמה למערכת - שלב 2 מתוך 5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mtrl_card_checked_layer_id"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>