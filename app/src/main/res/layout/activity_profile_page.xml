<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context=".Activities.ProfilePageActivity">

    <!--  logo  -->
    <ImageView
        android:id="@+id/logo_image_in_profile"
        android:layout_width="159dp"
        android:layout_height="119dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:contentDescription="@string/logo_description"
        android:cursorVisible="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/university" />

    <ScrollView
        android:id="@+id/scrollViewUserInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_image_in_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_user_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="@string/user_first_name_field"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:drawableStartCompat="@drawable/ic_my_profile_small" />

            <TextView
                android:id="@+id/profile_user_last_name"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:hint="@string/user_last_name_field"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:drawableStartCompat="@drawable/ic_my_profile_small" />

            <EditText
                android:id="@+id/usersEmailMyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_contact_mail"
                android:drawablePadding="10dp"
                android:hint="@string/email_field"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

    <!--  Edit buttons  -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/scrollViewUserInfo"
        app:layout_constraintEnd_toEndOf="@id/scrollViewUserInfo">

        <ImageView
            android:id="@+id/btnCancelEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/ic_cancel_editing_profile"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edit_profile" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>