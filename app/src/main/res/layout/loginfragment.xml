<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundimage"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/continueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="100dp"
        android:text="המשך"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mtrl_card_checked_layer_id" />

    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שכחתי סיסמא"
        android:layout_marginRight="24dp"
        tools:layout_editor_absoluteX="282dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/mtrl_card_checked_layer_id"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="399dp" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="מסך הרשמה למערכת - שלב 1 מתוך 5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/mtrl_card_checked_layer_id"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="1dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/mtrl_card_checked_layer_id"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:cardBackgroundColor="@android:color/background_light"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="686dp" >

        <TextView
            android:id="@+id/passwordValidation"
            android:layout_marginStart="280dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="10dp"
            android:text="text"
            android:textColor="#FF0000"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/emailValidation"
            android:layout_marginStart="280dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="10dp"
            android:text="text"
            android:textColor="#FF0000"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/password"
            android:layout_marginStart="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:layout_marginEnd="30dp"
            android:hint="@string/password_address_field"
            android:inputType="textPassword"
            android:text=""
            tools:ignore="TextFields"
            android:autofillHints="" />

        <EditText
            android:id="@+id/email"
            android:layout_marginTop="16dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:ems="10"
            android:hint="@string/email_address_field"
            android:inputType="textEmailAddress"
            android:text=""
            tools:ignore="TextFields"
            android:autofillHints="" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>